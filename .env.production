# Disease Dashboard - Production Configuration
# Uses Azure Blob Storage for data

# Application Settings
APP_NAME="Disease Dashboard"
APP_VERSION="0.1.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database - persistent file for production
DATABASE_PATH="disease_dashboard.duckdb"

# Data Source URIs - Azure Blob Storage
DATA_URI="az://data/us_disease_tracker_data"
NNDSS_DATA_URI="az://data/nndss_data"

# Azure Blob Storage credentials
# Set these via environment variables or .env override for security
AZURE_STORAGE_ACCOUNT=""
AZURE_STORAGE_KEY=""

# Staging Authentication - enable for staging environments
STAGING_AUTH_ENABLED=false

# Azure Deployment
AZURE_RESOURCE_GROUP=""
AZURE_LOCATION="eastus"
AZURE_CONTAINER_APP_NAME="disease-dashboard"
AZURE_ENVIRONMENT_NAME="disease-dashboard-env"

# GitHub Container Registry
GITHUB_OWNER=""
GITHUB_REPO=""
