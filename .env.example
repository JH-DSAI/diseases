# Disease Dashboard Environment Configuration

# Application Settings
APP_NAME="Disease Dashboard"
APP_VERSION="0.1.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database
# Path to data directory (relative to project root)
DATA_DIRECTORY="us_disease_tracker_data"
# DuckDB database path (:memory: for in-memory, or path to file for persistent)
DATABASE_PATH=":memory:"

# Staging Authentication (HTTP Basic Auth)
# Enable to protect dev/staging environments with password
STAGING_AUTH_ENABLED=true
STAGING_AUTH_USERNAME="admin"
STAGING_AUTH_PASSWORD=""  # Required if STAGING_AUTH_ENABLED=true

# Azure Deployment
AZURE_RESOURCE_GROUP=""        # e.g., "my-resource-group"
AZURE_LOCATION=""              # e.g., "eastus"
AZURE_CONTAINER_APP_NAME=""    # e.g., "disease-dashboard"
AZURE_ENVIRONMENT_NAME=""      # e.g., "disease-dashboard-env"

# GitHub Container Registry
GITHUB_OWNER=""                # Your GitHub username or organization
GITHUB_REPO=""                 # Repository name (e.g., "diseases")
