# Disease Dashboard Environment Configuration

# Application Settings
APP_NAME="Disease Dashboard"
APP_VERSION="0.1.0"
DEBUG=false

# Authentication
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY="change-me-in-production-use-secrets-token-hex"

# API Keys (comma-separated list of authorized API keys)
# Generate API keys with: python -c "import secrets; print(secrets.token_hex(32))"
API_KEYS="your-api-key-here,another-api-key-here"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database
# Path to data directory (relative to project root)
DATA_DIRECTORY="us_disease_tracker_data"
# DuckDB database path (:memory: for in-memory, or path to file for persistent)
DATABASE_PATH=":memory:"
