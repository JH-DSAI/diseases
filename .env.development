# Disease Dashboard - Development Configuration
# Uses local data directories for fast iteration

# Application Settings
APP_NAME="Disease Dashboard"
APP_VERSION="0.1.0"
DEBUG=true

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Database - in-memory for fast restarts
DATABASE_PATH=":memory:"

# Local Data Directories
DATA_DIRECTORY="us_disease_tracker_data"
NNDSS_DATA_DIRECTORY="nndss_data"

# Data Source URIs - leave empty to use local directories
DATA_URI=""
NNDSS_DATA_URI=""

# Azure Blob Storage - not needed for local development
AZURE_STORAGE_ACCOUNT=""
AZURE_STORAGE_KEY=""

# Staging Authentication - disabled for local development
STAGING_AUTH_ENABLED=false
